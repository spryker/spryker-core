<?xml version="1.0"?>
<config>
    <acl>
        <label>Users Control</label>
        <title>Users Control</title>
        <bundle>acl</bundle>
        <controller>index</controller>
        <action>index</action>
        <uri>/acl</uri>
        <icon>fa-users</icon>
        <pages>
            <roles>
                <label>Roles</label>
                <title>Roles</title>
                <bundle>acl</bundle>
                <controller>role</controller>
                <action>index</action>
                <icon>fa-user-secret</icon>
                <pages>
                    <role-create>
                        <label>Create new Role</label>
                        <title>Create new Role</title>
                        <bundle>acl</bundle>
                        <controller>role</controller>
                        <action>create</action>
                        <visible>0</visible>
                    </role-create>
                    <role-edit>
                        <label>Edit Role</label>
                        <title>Edit Role</title>
                        <bundle>acl</bundle>
                        <controller>role</controller>
                        <action>update</action>
                        <visible>0</visible>
                    </role-edit>
                </pages>
            </roles>
            <groups>
                <label>Groups</label>
                <title>Groups</title>
                <bundle>acl</bundle>
                <controller>group</controller>
                <action>index</action>
                <icon>fa-users</icon>
                <pages>
                    <group-create>
                        <label>Create new Group</label>
                        <title>Create new Group</title>
                        <bundle>acl</bundle>
                        <controller>group</controller>
                        <action>add</action>
                        <visible>0</visible>
                    </group-create>
                    <group-edit>
                        <label>Edit Group</label>
                        <title>Edit Group</title>
                        <bundle>acl</bundle>
                        <controller>group</controller>
                        <action>edit</action>
                        <visible>0</visible>
                    </group-edit>
                </pages>
            </groups>
        </pages>
    </acl>
</config>
