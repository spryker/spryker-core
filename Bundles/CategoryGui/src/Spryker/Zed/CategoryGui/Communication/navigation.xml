<?xml version="1.0"?>
<config>
    <category>
        <label>Category</label>
        <title>Category</title>
        <bundle>category</bundle>
        <controller>root</controller>
        <action>index</action>
        <order>0</order>
        <shortcut>c</shortcut>
        <icon>fa-sitemap</icon>

        <pages>

            <sort-category>
                <label>Re-sort Child Categories</label>
                <title>Re-sort Child Categories</title>
                <bundle>category</bundle>
                <controller>re-sort</controller>
                <action>index</action>
                <visible>0</visible>
            </sort-category>

            <view-category>
                <label>View Category</label>
                <title>View Category</title>
                <bundle>category</bundle>
                <controller>view</controller>
                <action>index</action>
                <visible>0</visible>
            </view-category>

            <edit-category>
                <label>Edit Category</label>
                <title>Edit Category</title>
                <bundle>category</bundle>
                <controller>edit</controller>
                <action>index</action>
                <visible>0</visible>
            </edit-category>

            <create-category>
                <label>Create Category</label>
                <title>Create Category</title>
                <bundle>category</bundle>
                <controller>create</controller>
                <action>index</action>
                <visible>0</visible>
            </create-category>

            <assing-products-to-category>
                <label>Assign Products to Category</label>
                <title>Assign Products to Category</title>
                <bundle>product-category</bundle>
                <controller>assign</controller>
                <action>index</action>
                <visible>0</visible>
            </assing-products-to-category>

            <delete-category>
                <label>Delete Category</label>
                <title>Delete Category</title>
                <bundle>category</bundle>
                <controller>delete</controller>
                <action>index</action>
                <visible>0</visible>
            </delete-category>
        </pages>
