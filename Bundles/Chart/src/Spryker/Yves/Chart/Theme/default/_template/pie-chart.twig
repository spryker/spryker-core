{% set chartType = 'pie' %}
<script>/*<![CDATA[*/
    var chartData = [];
    var chartLayout = {{ layout | json_encode() }};

    {% for trace in data.traces %}
        chartData.push({
            name: '{{ trace.name }}',
            type: '{{ chartType }}',
            labels: {{ trace.labels | json_encode | raw }},
            values: {{ trace.values | json_encode | raw }}
        });
    {% endfor %}
/*]]>*/</script>

{% include '@Chart/_partials/plotly-chart.twig' with {
    chartType: chartType,
    layout: layout,
    data: data
} %}
