<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestCheckoutData">
        <property name="addresses" type="Addresses"/>
        <property name="shipmentMethods" type="ShipmentMethods"/>
        <property name="paymentMethods" type="PaymentMethods"/>
    </transfer>

    <transfer name="RestCheckoutError">
        <property name="status" type="int"/>
        <property name="code" type="string"/>
        <property name="detail" type="string"/>
        <property name="parameters" type="array"/>
    </transfer>

    <transfer name="RestCheckoutDataResponse">
        <property name="isSuccess" type="bool" />
        <property name="errors" type="RestCheckoutError[]" singular="error" />
        <property name="checkoutData" type="RestCheckoutData"/>
    </transfer>

    <transfer name="RestCheckoutRequestAttributes">
        <property name="customer" type="RestCustomer"/>
        <property name="id" type="string"/>
        <property name="billingAddress" type="RestAddress"/>
        <property name="shippingAddress" type="RestAddress"/>
        <property name="payments" type="RestPayment[]" singular="payment"/>
        <property name="shipment" type="RestShipment"/>
    </transfer>

    <transfer name="RestCustomer">
        <property name="email" type="string" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
        <property name="idCustomer" type="int" />
        <property name="customerReference" type="string" />
    </transfer>

    <transfer name="RestAddress">
        <property name="id" type="string" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="zipCode" type="string" />
        <property name="city" type="string" />
        <property name="country" type="string" />
        <property name="iso2Code" type="string" />
        <property name="company" type="string" />
        <property name="phone" type="string" />
        <property name="isDefaultBilling" type="bool" />
        <property name="isDefaultShipping" type="bool" />
    </transfer>

    <transfer name="RestShipment">
        <property name="shipmentSelection" type="int"/>
    </transfer>

    <transfer name="RestPayment">
        <property name="paymentProvider" type="string"/>
        <property name="paymentMethod" type="string"/>
        <property name="paymentSelection" type="string"/>
        <property name="isLimitedAmount" type="bool" />
    </transfer>

    <transfer name="RestCheckoutDataResponseAttributes">
        <property name="addresses" type="RestAddress[]"/>
        <property name="paymentMethods" type="RestPaymentMethod[]"/>
        <property name="shipmentMethods" type="RestShipmentMethod[]"/>
    </transfer>

    <transfer name="RestPaymentMethod">
        <property name="methodName" type="string"/>
        <property name="requiredRequestData" type="array"/>
    </transfer>

    <transfer name="RestShipmentMethod">
        <property name="carrierName" type="string"/>
        <property name="id" type="int"/>
        <property name="name" type="string"/>
        <property name="price" type="int"/>
        <property name="taxRate" type="float"/>
        <property name="shipmentDeliveryTime" type="int"/>
    </transfer>

    <transfer name="RestCheckoutResponseAttributes">
        <property name="orderReference" type="string"/>
    </transfer>

    <transfer name="RestCheckoutResponse">
        <property name="isSuccess" type="bool" />
        <property name="errors" type="RestCheckoutError[]" singular="error" />
        <property name="orderReference" type="string" />
    </transfer>

</transfers>

