<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="CheckoutData">
        <property name="addresses" type="Addresses"/>
        <property name="shipmentMethods" type="ShipmentMethods"/>
        <property name="paymentMethods" type="PaymentMethods"/>
    </transfer>

    <transfer name="Addresses">
        <property name="addresses" type="Address[]" singular="Address" />
    </transfer>

    <transfer name="Address">
        <property name="idCustomerAddress" type="int" />
        <property name="email" type="string" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="company" type="string" />
        <property name="city" type="string" />
        <property name="zipCode" type="string" />
        <property name="phone" type="string" />
        <property name="comment" type="string" />
        <property name="state" type="string" />
        <property name="isDeleted" type="bool" />
        <property name="isDefaultBilling" type="bool" />
        <property name="isDefaultShipping" type="bool" />
        <property name="fkCountry" type="int" />
        <property name="fkRegion" type="int" />
        <property name="iso2Code" type="string" />
        <property name="anonymizedAt" type="string" />
        <property name="country" type="Country" />
    </transfer>

    <transfer name="ShipmentMethods">
        <property name="methods" type="ShipmentMethod[]" singular="method" />
    </transfer>

    <transfer name="ShipmentMethod">
        <property name="idShipmentMethod" type="int" />
        <property name="prices" type="MoneyValue[]" singular="price" />
        <property name="storeCurrencyPrice" type="int" />
        <property name="currencyIsoCode" type="string" />
    </transfer>

    <transfer name="PaymentMethods">
        <property name="methods" singular="method" type="PaymentMethod[]" />
    </transfer>

    <transfer name="PaymentMethod">
        <property name="methodName" type="string" />
    </transfer>

    <transfer name="RestCheckoutRequestAttributes">
        <property name="quote" type="RestQuoteRequest"/>
    </transfer>

    <transfer name="RestQuoteRequest">
        <property name="customer" type="RestCustomer"/>
        <property name="quoteIdentifier" type="string"/>
        <property name="billingAddress" type="RestAddress"/>
        <property name="shippingAddress" type="RestAddress"/>
        <property name="payments" type="Payment[]" singular="payment"/>
        <property name="shipment" type="RestShipment"/>
        <property name="voucherCode" type="string"/>
    </transfer>

    <transfer name="RestCustomer">
        <property name="email" type="string" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
    </transfer>

    <transfer name="RestAddress">
        <property name="idCustomerAddress" type="int" />
        <property name="email" type="string" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="zipCode" type="string" />
        <property name="city" type="string" />
        <property name="country" type="string" />
        <property name="iso2Code" type="string" />
        <property name="company" type="string" />
        <property name="phone" type="string" />
    </transfer>

    <transfer name="RestShipment">
        <property name="shipmentSelection" type="int"/>
        <property name="method" type="ShipmentMethod"/>
    </transfer>

    <transfer name="RestCheckoutDataResponseAttributes">
        <property name="RestAddressesResponseData" type="RestAddress[]"/>
        <property name="RestPaymentMethodsResponseData" type="RestPaymentMethodAttributes[]"/>
        <property name="RestShipmentMethodsResponseData" type="RestShipmentMethodAttributes[]"/>
    </transfer>

    <transfer name="RestPaymentMethodAttributes">
        <property name="methodName" type="string"/>
        <property name="requiredResponseData" type="bool"/>
    </transfer>

    <transfer name="RestShipmentMethodAttributes">
        <property name="carrierName" type="string"/>
        <property name="idShipmentMethod" type="int"/>
        <property name="name" type="string"/>
        <property name="price" type="int"/>
        <property name="taxRate" type="float"/>
        <property name="shipmentDeliveryTime" type="int"/>
    </transfer>

    <transfer name="RestCheckoutResponseAttributes">
        <property name="orderReference" type="string"/>
    </transfer>

</transfers>

