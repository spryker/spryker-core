<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\CmsSlotStorage\Persistence" package="src.Orm.Zed.CmsSlotStorage.Persistence">

    <table name="spy_cms_slot_storage" phpName="SpyCmsSlotStorage" idMethod="native" allowPkInsert="true" identifierQuoting="true">
        <column name="id_cms_slot_storage" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="cms_slot_key" required="true" type="VARCHAR" />
        <column name="data" type="LONGVARCHAR"/>
        <column name="key" type="VARCHAR" required="true"/>

        <unique name="spy_cms_slot_storage-cms_slot_key">
            <unique-column name="cms_slot_key"/>
        </unique>

        <id-method-parameter value="spy_cms_slot_storage_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="cms_slot"/>
            <parameter name="key_suffix_column" value="cms_slot_key"/>
            <parameter name="queue_group" value="sync.storage.cms"/>
        </behavior>
    </table>

</database>
