{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Customer' %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton('/customer/', 'Back to Customers' | trans) }}
    {{ viewActionButton('/customer/view?id_customer=' ~ id_customer, 'View Customer' | trans) }}
    {{ viewActionButton('/customer/address/?id_customer=' ~ id_customer, 'Manage Addresses' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
