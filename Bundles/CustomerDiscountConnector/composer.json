{
    "name": "spryker/customer-discount-connector",
    "type": "library",
    "description": "CustomerDiscountConnector module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker/customer": "^7.0.0",
        "spryker/discount": "^9.44.0",
        "spryker/discount-extension": "^1.2.0",
        "spryker/kernel": "^3.77.0",
        "spryker/propel": "^3.43.0",
        "spryker/propel-orm": "^1.16.0",
        "spryker/transfer": "^3.27.0"
    },
    "require-dev": {
        "spryker/checkout": "*",
        "spryker/code-sniffer": "*",
        "spryker/testify": "*"
    },
    "suggest": {
        "spryker/checkout": "Add this dependency to use CustomerDiscountOrderSavePlugin"
    },
    "autoload": {
        "psr-4": {
            "Spryker\\": "src/Spryker/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerTest\\": "tests/SprykerTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
