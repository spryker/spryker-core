<?xml version="1.0"?>
<database
    xmlns="spryker:schema-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="zed"
    xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
    namespace="Orm\Zed\FileImportMerchantPortalGui\Persistence"
    package="src.Orm.Zed.FileImportMerchantPortalGui.Persistence"
>

    <table name="spy_merchant_file_import" idMethod="native" allowPkInsert="true">
        <column name="id_merchant_file_import" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_merchant_file" type="INTEGER" required="true"/>
        <column name="entity_type" type="VARCHAR" size="255" required="true"/>
        <column name="status" type="VARCHAR" size="255" required="true" default="pending"/>
        <column name="processed_entities_count" type="INTEGER"/>
        <column name="failed_entities_count" type="INTEGER"/>
        <column name="errors" type="CLOB"/>
        <column name="started_at" type="TIMESTAMP"/>
        <column name="finished_at" type="TIMESTAMP"/>

        <index name="index-spy_merchant_file_import-status">
            <index-column name="status"/>
        </index>

        <behavior name="uuid">
            <parameter name="key_columns" value="id_merchant_file_import.fk_merchant_file"/>
        </behavior>

        <behavior name="timestampable"/>

        <foreign-key name="spy_merchant_file_import-fk_merchant_file" foreignTable="spy_merchant_file">
            <reference local="fk_merchant_file" foreign="id_merchant_file"/>
        </foreign-key>
    </table>

</database>
