{% extends '@Gui/Layout/layout.twig' %}

{% if widget_title is not defined %}
    {% set widget_title = 'Translation details' %}
{% endif %}

{% block head_title widget_title %}
{% block section_title 'Create Translation' %}

{% form_theme form '@Glossary/Twig/filter-label-form.twig' %}

{% block action %}
    {{ backActionButton('/glossary', 'List Translations' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-glossary-main.js"></script>
{% endblock %}
