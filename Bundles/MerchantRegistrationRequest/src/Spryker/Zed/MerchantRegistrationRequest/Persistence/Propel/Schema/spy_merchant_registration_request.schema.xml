<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\MerchantRegistrationRequest\Persistence" package="src.Orm.Zed.MerchantRegistrationRequest.Persistence">

    <table name="spy_merchant_registration_request">
        <column name="id_merchant_registration_request" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_country" required="true" type="INTEGER"/>
        <column name="fk_store" required="true" type="INTEGER"/>
        <column name="company_name" required="true" type="VARCHAR" size="255"/>
        <column name="registration_number" required="true" type="VARCHAR" size="50"/>
        <column name="address1" required="true" type="VARCHAR" size="255"/>
        <column name="address2" required="true" type="VARCHAR" size="255"/>
        <column name="zip_code" required="true" type="VARCHAR" size="15"/>
        <column name="city" required="true" type="VARCHAR" size="255"/>
        <column name="contact_person_title" required="true" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, n/a"/>
        <column name="contact_person_first_name" required="true" type="VARCHAR" size="100"/>
        <column name="contact_person_last_name" required="true" type="VARCHAR" size="100"/>
        <column name="email" required="true" type="VARCHAR" size="255"/>
        <column name="contact_person_phone" required="false" type="VARCHAR" size="255"/>
        <column name="contact_person_role" required="true" type="VARCHAR" size="255"/>
        <column name="status" required="true" type="VARCHAR" size="255"/>

        <foreign-key name="spy_merchant_registration_request-fk_country" foreignTable="spy_country" phpName="Country">
            <reference local="fk_country" foreign="id_country"/>
        </foreign-key>

        <foreign-key name="spy_merchant_registration_request-fk_store" foreignTable="spy_store" phpName="Store">
            <reference local="fk_store" foreign="id_store"/>
        </foreign-key>

        <index name="spy_merchant_registration_request-email-status">
            <index-column name="email"/>
            <index-column name="status"/>
        </index>

        <index name="spy_merchant_registration_request-company_name-status">
            <index-column name="company_name"/>
            <index-column name="status"/>
        </index>

        <index name="spy_merchant_registration_request-status">
            <index-column name="status"/>
        </index>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_merchant_registration_request_pk_seq"/>
    </table>
</database>
