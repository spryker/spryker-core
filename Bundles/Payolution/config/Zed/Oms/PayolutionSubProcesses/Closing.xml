<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns="http://static.spryker.com"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://static.spryker.com http://static.spryker.com/oms-01.xsd">

    <process name="Closing">
        <states>
            <state name="ready for closing"/>
            <state name="closed"/>
        </states>

        <transitions>
            <transition>
                <source>ready for closing</source>
                <target>closed</target>
                <event>close</event>
            </transition>
        </transitions>

        <events>
            <event name="close" onEnter="true"/>
        </events>
    </process>
</statemachine>
