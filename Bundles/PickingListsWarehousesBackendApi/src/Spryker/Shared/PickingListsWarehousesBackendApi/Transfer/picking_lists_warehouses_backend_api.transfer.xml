<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="WarehousesBackendApiAttributes" strict="true">
        <property name="name" type="string" description="The name of an entity (e.g., user, category, product, role)."/>
    </transfer>

    <transfer name="GlueRequest">
    </transfer>

    <transfer name="GlueRelationship">
        <property name="resources" type="GlueResource[]" singular="resource" description="A collection of data entities in a REST API."/>
    </transfer>

    <transfer name="GlueResource">
        <property name="type" type="string" description="The type or category of an entity (e.g., 'allow', 'deny', 'page')."/>
        <property name="id" type="string"/>
        <property name="attributes" type="AbstractAttributes" description="A set of key-value pairs describing a product or entity."/>
        <property name="relationships" type="GlueRelationship[]" singular="relationship" description="A collection of relationships between resources."/>
    </transfer>

    <transfer name="PickingListConditions" strict="true">
        <property name="uuids" type="string[]" singular="uuid" description="A collection of Universally Unique Identifiers."/>
    </transfer>

    <transfer name="PickingListCriteria" strict="true">
        <property name="pickingListConditions" type="PickingListConditions" description="Conditions for filtering picking lists."/>
    </transfer>

    <transfer name="StockConditions" strict="true">
        <property name="stockIds" type="int[]" singular="idStock" description="A collection of stock IDs."/>
        <property name="uuids" type="string[]" singular="uuid" description="A collection of Universally Unique Identifiers."/>
    </transfer>

    <transfer name="StockCriteria" strict="true">
        <property name="stockConditions" type="StockConditions" description="Conditions for filtering stock."/>
    </transfer>

    <transfer name="PickingListCollection" strict="true">
        <property name="pickingLists" type="PickingList[]" singular="pickingList" description="A collection of picking lists."/>
    </transfer>

    <transfer name="PickingList" strict="true">
        <property name="warehouse" type="Stock" description="A warehouse or stock location."/>
        <property name="uuid" type="string" description="A Universally Unique Identifier for an entity."/>
    </transfer>

    <transfer name="Stock">
        <property name="uuid" type="string" strict="true" description="A Universally Unique Identifier for an entity."/>
    </transfer>

    <transfer name="WarehouseResourceCollection" strict="true">
        <property name="warehouseResources" type="GlueResource[]" singular="warehouseResource" description="A collection of warehouse resources."/>
    </transfer>
</transfers>
