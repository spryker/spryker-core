{
    "name": "spryker/price-cart-connector",
    "type": "library",
    "description": "PriceCartConnector module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker/cart-extension": "^2.4.0 || ^4.0.0",
        "spryker/currency": "^3.0.0 || ^4.0.0",
        "spryker/kernel": "^3.30.0",
        "spryker/messenger": "^3.0.0",
        "spryker/price": "^5.0.0",
        "spryker/price-cart-connector-extension": "^1.1.0",
        "spryker/price-product": "^1.4.0 || ^2.3.0 || ^4.1.0",
        "spryker/util-encoding": "^2.0.0",
        "spryker/util-text": "^1.1.0"
    },
    "require-dev": {
        "spryker/cart": "*",
        "spryker/code-sniffer": "*",
        "spryker/product": "*",
        "spryker/propel": "*",
        "spryker/store": "*",
        "spryker/testify": "*"
    },
    "suggest": {
        "spryker/cart": "If you want to use Cart plugins."
    },
    "autoload": {
        "psr-4": {
            "Spryker\\": "src/Spryker/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerTest\\": "tests/SprykerTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
