{
    "name": "spryker/product-configuration-persistent-cart",
    "type": "library",
    "description": "ProductConfigurationPersistentCart module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker/kernel": "^3.30.0",
        "spryker/persistent-cart-extension": "^1.0.0",
        "spryker/product-configuration-storage": "^1.0.0",
        "spryker/transfer": "^3.25.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/config": "*",
        "spryker/container": "*",
        "spryker/product": "*",
        "spryker/propel": "*",
        "spryker/session": "*",
        "spryker/storage": "*",
        "spryker/store": "*",
        "spryker/testify": "*"
    },
    "autoload": {
        "psr-4": {
            "Spryker\\": "src/Spryker/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerTest\\": "tests/SprykerTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
