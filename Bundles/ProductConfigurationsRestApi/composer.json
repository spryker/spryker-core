{
  "name": "spryker/product-configurations-rest-api",
  "type": "library",
  "description": "ProductConfigurationsRestApi module",
  "license": "proprietary",
  "require": {
    "php": ">=7.3",
    "spryker/carts-rest-api-extension": "^1.7.0",
    "spryker/kernel": "^3.56.0",
    "spryker/persistent-cart": "^3.5.0",
    "spryker/product-configuration": "^0.1.0",
    "spryker/product-configuration-storage": "^0.1.2",
    "spryker/product-configurations-rest-api-extension": "^1.0.0",
    "spryker/products-rest-api-extension": "^1.0.0",
    "spryker/util-encoding": "^2.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/customer": "*",
    "spryker/glue-application": "*",
    "spryker/propel": "*",
    "spryker/quote": "*",
    "spryker/testify": "*"
  },
  "suggest": {
    "spryker/glue-application": "If you want to use RestRequestInterface.",
    "spryker/products-rest-api": "If you want to use plugins with ProductsRestApi module."
  },
  "autoload": {
    "psr-4": {
      "Spryker\\": "src/Spryker/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerTest\\": "tests/SprykerTest/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
    "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
