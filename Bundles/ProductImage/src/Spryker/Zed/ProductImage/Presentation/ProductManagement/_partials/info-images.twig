{% for image in data.images %}
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-4">
                <img src="{{ image.image_preview }}" style="max-width: 100px; max-height: 100px">
            </div>
            <div class="col-lg-8">
                {% if image.translations is not empty %}
                    {{ 'Alternative text' | trans }}:<br>
                    {% if data.localeName != 'default' %}
                        {{ 'Small' | trans }}: {{ image.translations[0].alt_text_small }}<br>
                        {{ 'Large' | trans }}: {{ image.translations[0].alt_text_large }}
                    {% else %}
                        {% for translation in image.translations %}
                            <b>{{ translation.locale.locale_name | upper }}:</b><br>
                            {{ 'Small' | trans }}: {{ translation.alt_text_small }}<br>
                            {{ 'Large' | trans }}: {{ translation.alt_text_large }}<br>
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
