{% embed '@Gui/Partials/widget.twig' with { widget_title: 'Image Sets' } %}
    {% block widget_content %}

        {% for localeName,imageSets in imageSetCollection %}
            {% for imageSet in imageSets %}
                {% if imageSet.name %}
                    {% embed '@Gui/Partials/localized-ibox.twig' with {'collapsed': (not loop.parent.loop.first)} %}

                        {% block title %}
                            {% if localeName == 'default' %}
                                {{ 'Default' | trans }}
                            {% else %}
                                {{ parent() }}
                            {% endif %}
                        {% endblock %}

                        {% block content %}
                            <div class="row">
                                <div class="col-xs-2"><b>{{ 'Name' | trans }}</b></div>
                                <div class="col-xs-10">{{ imageSet.name }}</div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                {% include ['@ProductImage/ProductManagement/_partials/info-images.twig', '@ProductManagement/View/_partials/info-images.twig'] with {
                                    data: {
                                        images: imageSet.product_images,
                                        localeName: localeName,
                                    },
                                } only %}
                            </div>
                        {% endblock %}

                    {% endembed %}
                {% endif %}
            {% endfor %}
        {% endfor %}

    {% endblock %}
{% endembed %}
