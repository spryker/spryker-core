{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Overview of Product Reviews' | trans %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'List of product reviews' } %}

        {% block widget_content %}
            {{ productReviewTable | raw }}
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-product-review-main.css') }}">
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-product-review-main.js') }}"></script>
{% endblock %}
