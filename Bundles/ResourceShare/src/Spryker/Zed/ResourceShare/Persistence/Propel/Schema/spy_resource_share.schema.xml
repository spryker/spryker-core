<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" name="zed" namespace="Orm\Zed\ResourceShare\Persistence" package="src.Orm.Zed.ResourceShare.Persistence">

    <table name="spy_resource_share" idMethod="native">
        <column name="id_resource_share" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="customer_reference" required="true" type="VARCHAR" size="255" description="A unique reference for a customer."/>
        <column name="uuid" required="false" type="VARCHAR" size="255" description="A Universally Unique Identifier for an entity."/>
        <column name="resource_type" required="true" type="VARCHAR" size="255" description="The type of a resource."/>
        <column name="resource_data" required="false" type="LONGVARCHAR" description="A serialized representation of the data associated with a shared resource."/>
        <column name="expiry_date" required="false" type="timestamp" description="The date on which a resource share expires."/>

        <id-method-parameter value="id_resource_share_pk_seq"/>

        <unique name="id_resource_share-uuid">
            <unique-column name="uuid"/>
        </unique>

        <index name="spy_resource_share-uuid">
            <index-column name="uuid"/>
        </index>

        <behavior name="timestampable"/>

        <behavior name="uuid">
            <parameter name="key_columns" value="customer_reference.resource_type.resource_data.expiry_date"/>
        </behavior>
    </table>

</database>
