{% set items = shipmentOrderItems.items | filter(item => item.relatedBundleItemIdentifier is empty and item.salesOrderConfiguredBundleItem is empty) %}

{% for orderItem in items %}
    <tr>
        {% include '@Sales/Detail/boxes/order-item.twig' with {
            orderItem: orderItem,
            isBundleProduct: false,
            displayImage: true,
            displayTotals: true,
            changeStatusRedirectUrl: changeStatusRedirectUrl,
            eventsGroupedByItem: eventsGroupedByItem,
            order: order,
            tableColumnCellsContent:tableColumnCellsContent,
        } %}
    </tr>

    {% include '@Sales/Detail/boxes/order-item-option.twig' with {
        orderItem: orderItem,
        order: order,
    } %}
{% endfor %}
