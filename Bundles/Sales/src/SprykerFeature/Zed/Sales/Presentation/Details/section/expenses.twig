<div class="row">
    <div class="col-md-12">

        {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Expenses Overview' } %}

            {% block widget_content %}

                <table class="footable table table-striped toggle-arrow-tiny">
                    <thead>
                    <tr>
                        <th>{{ 'Expense' | trans }}</th>
                        <th>{{ 'QTY' | trans }}</th>
                        <th>{{ 'Gross Price' | trans }}</th>
                        <th>{{ 'Price to pay' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for expense in expenses %}
                    <tr>
                        <td>{{ expense.name }}</td>
                        <td>1</td>
                        <td>{{ expense.grossPrice | currency }}</td>
                        <td>{{ expense.priceToPay | currency }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>

            {% endblock %}

        {% endembed %}

    </div>
</div>
