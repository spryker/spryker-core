<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\SalesProductConfiguration\Persistence" package="src.Orm.Zed.SalesProductConfiguration.Persistence">

    <table name="spy_sales_order_item_configuration">
        <column name="id_sales_order_item_configuration" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_item" type="INTEGER" required="true"/>
        <column name="display_data" type="CLOB" required="false" description="Data used for display purposes, often in JSON format."/>
        <column name="configuration" type="CLOB" required="false" description="A set of configuration parameters."/>
        <column name="configurator_key" required="true" type="VARCHAR" size="255" description="A key identifying the product configurator to use."/>

        <index name="spy_sales_order_item_configuration-fk_sales_order_item">
            <index-column name="fk_sales_order_item"/>
        </index>

        <foreign-key name="spy_sales_order_item_configuration-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference foreign="id_sales_order_item" local="fk_sales_order_item"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_item_configuration_pk_seq"/>
    </table>

</database>
