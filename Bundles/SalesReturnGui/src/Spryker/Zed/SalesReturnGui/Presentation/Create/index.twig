{% extends '@Gui/Layout/layout.twig' %}

{% block section_title %}
    {{ 'Create Return' | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton(url('/sales/detail', {'id-sales-order' : order.idSalesOrder}), 'Back to Order' | trans) }}
{% endblock %}

{% block content %}
    {% if templates %}
        {% for templatePath, templateData in templates %}
            {% include templatePath with templateData %}
        {% endfor %}
    {% else %}
        {% include '@SalesReturnGui/Create/default.twig' %}
    {% endif %}
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-sales-return-gui-main.css') }}">
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-sales-return-gui-main.js') }}"></script>
{% endblock %}
