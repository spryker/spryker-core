{% extends '@SecurityMerchantPortalGui/Layout/layout.twig' %}

{% block content %}
    {% set linkUrl = '/security-merchant-portal-gui/password/reset-request' %}
    {% set linkText = 'Forgot password?' | trans %}

    {{ parent() }}
{% endblock %}

{% block formContent %}

    {{ form_row(form.username) }}
    {{ form_row(form.password) }}
    {{ form_row(form.login, {attr: {class: submitButtonClass}}) }}

    {% include '@MultiFactorAuthMerchantPortal/Partials/mp-mfa-handler.twig' ignore missing with {
        formSelector: "form[name=#{form.vars.name}]",
        url: form.vars.action,
    } %}
{% endblock %}
