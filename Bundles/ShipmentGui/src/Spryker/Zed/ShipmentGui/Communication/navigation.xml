<?xml version="1.0"?>
<config>
    <sales>
        <pages>
            <order-list>
                <pages>
                    <shipment-create>
                        <label>Create Shipment</label>
                        <title>Create Shipment</title>
                        <bundle>shipment-gui</bundle>
                        <controller>create</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </shipment-create>

                    <shipment-edit>
                        <label>Edit Shipment</label>
                        <title>Edit Shipment</title>
                        <bundle>shipment-gui</bundle>
                        <controller>edit</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </shipment-edit>
                </pages>
            </order-list>
        </pages>
    </sales>

    <administration>
        <label>Administration</label>
        <title>Administration</title>
        <icon>fa-angle-double-right</icon>
        <pages>
            <shipments>
                <label>Shipments</label>
                <title>Shipments</title>
                <pages>
                    <shipment-carrier-create>
                        <label>Create new Shipment Carrier</label>
                        <title>Create new Shipment Carrier</title>
                        <bundle>shipment-gui</bundle>
                        <controller>create-carrier</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </shipment-carrier-create>

                    <shipment-method>
                        <label>Delivery Methods</label>
                        <title>Delivery Methods</title>
                        <bundle>shipment-gui</bundle>
                        <controller>shipment-method</controller>
                        <action>index</action>
                        <icon>fa fa-angle-right</icon>
                        <pages>
                            <shipment-method-view>
                                <label>View</label>
                                <title>View</title>
                                <bundle>shipment-gui</bundle>
                                <controller>view-shipment-method</controller>
                                <action>index</action>
                                <visible>0</visible>
                            </shipment-method-view>
                            <shipment-method-create>
                                <label>Create</label>
                                <title>Create</title>
                                <bundle>shipment-gui</bundle>
                                <controller>create-shipment-method</controller>
                                <action>index</action>
                                <visible>0</visible>
                            </shipment-method-create>
                            <shipment-method-update>
                                <label>Edit</label>
                                <title>Edit</title>
                                <bundle>shipment-gui</bundle>
                                <controller>update-shipment-method</controller>
                                <action>index</action>
                                <visible>0</visible>
                            </shipment-method-update>
                        </pages>
                    </shipment-method>
                </pages>
            </shipments>
        </pages>
    </administration>
</config>
