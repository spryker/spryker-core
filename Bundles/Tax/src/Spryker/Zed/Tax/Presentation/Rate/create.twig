
{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Create a Tax Rate' | trans %}

{% block action %}
    {{ backActionButton(url('/tax/rate/list'), 'Back to Tax Rates' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Tax rate details' | trans } %}

        {% block widget_content %}
            {{ form_start(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.fkCountry) }}

                <div class="form-group {% if form.rate.vars.errors|length > 0 %}has-error{% endif %}">
                    {{ form_label(form.rate) }}
                    <div class="input-group">
                        <div class="input-group-addon">&#37;</div>
                        {{ form_widget(form.rate) }}
                    </div>
                    {{ form_errors(form.rate) }}
                </div>

               <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}
        {% endblock %}

    {% endembed %}


{% endblock %}
