<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\UserPasswordReset\Persistence" package="src.Orm.Zed.UserPasswordReset.Persistence">

    <table name="spy_auth_reset_password" idMethod="native" phpName="SpyResetPassword">
