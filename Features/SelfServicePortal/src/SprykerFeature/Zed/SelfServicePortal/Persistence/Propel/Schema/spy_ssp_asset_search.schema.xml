<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\SelfServicePortal\Persistence" package="src.Orm.Zed.SelfServicePortal.Persistence">

    <table name="spy_ssp_asset_search" identifierQuoting="true">
        <column name="id_ssp_asset_search" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_ssp_asset" type="INTEGER" required="true"/>
        <column name="structured_data" type="LONGVARCHAR" required="true" description="A JSON-encoded string containing structured data for an SSP asset, used for search indexing."/>

        <index name="spy_ssp_asset_search-fk_ssp_asset">
            <index-column name="fk_ssp_asset"/>
        </index>

        <id-method-parameter value="spy_ssp_asset_search_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="ssp_asset"/>
            <parameter name="key_suffix_column" value="fk_ssp_asset"/>
            <parameter name="queue_group" value="sync.search.ssp_asset"/>
            <parameter name="params" value="{&quot;type&quot;:&quot;ssp_asset&quot;}"/>
        </behavior>
        <behavior name="timestampable"/>
    </table>

</database>
