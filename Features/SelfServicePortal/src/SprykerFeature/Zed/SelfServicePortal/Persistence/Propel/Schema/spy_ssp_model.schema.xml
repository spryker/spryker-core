<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\SelfServicePortal\Persistence" package="src.Orm.Zed.SelfServicePortal.Persistence">
    <table name="spy_ssp_model" idMethod="native">
        <column name="id_ssp_model" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="reference" required="true" size="255" type="VARCHAR"/>
        <column name="name" required="true" size="255" type="VARCHAR"/>
        <column name="code" required="false" size="255" type="VARCHAR"/>
        <column name="image_url" required="false" size="255" type="VARCHAR"/>
        <column name="fk_image_file" required="false" type="INTEGER"/>

        <foreign-key foreignTable="spy_file" phpName="File" onDelete="SET NULL">
            <reference local="fk_image_file" foreign="id_file"/>
        </foreign-key>

        <unique>
            <unique-column name="reference"/>
        </unique>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_ssp_model_pk_seq"/>
    </table>


    <table name="spy_ssp_model_storage" identifierQuoting="true">
        <column name="id_ssp_model_storage" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_ssp_model" type="INTEGER" required="true"/>

        <index name="spy_ssp_model_storage-fk_ssp_model">
            <index-column name="fk_ssp_model"/>
        </index>

        <id-method-parameter value="spy_ssp_model_storage_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="ssp_model"/>
            <parameter name="key_suffix_column" value="fk_ssp_model"/>
            <parameter name="queue_group" value="sync.storage.ssp_model"/>
        </behavior>

        <behavior name="timestampable"/>
    </table>
</database>
