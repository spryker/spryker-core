{% extends '@Gui/Layout/layout.twig' %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-self-service-portal.css') }}" />
{% endblock %}

{% block head_title %}
    {{ 'File Attachment' | trans }}
{% endblock %}

{% block section_title %}
    {{ 'File Attachment' | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton(url(urlPathListFile), 'Back' | trans) }}
{% endblock %}

{% block content %}
    {% include '@SelfServicePortal/_partials/guard/guard-tabs-form.twig' with {
        title: fileName,
        form: fileAttachForm,
        transfer: attachmentScopeTabsViewTransfer,
        tabs: {
            fileAttachForm: fileAttachForm,
            unattachedSspAssetTable: unattachedSspAssetTable,
            attachedSspAssetTable: attachedSspAssetTable,
            idFile: idFile,
            urlDownloadExample: urlDownloadExample,
            assetAttachmentTabsViewTransfer: assetAttachmentTabsViewTransfer,
            attachedAssetsTabsViewTransfer: attachedAssetsTabsViewTransfer,
            businessUnitTabsViewTransfer: businessUnitTabsViewTransfer,
            attachedBusinessUnitsTabsViewTransfer: attachedBusinessUnitsTabsViewTransfer,
            urlDownloadBusinessUnitExample: urlDownloadBusinessUnitExample,
            unattachedBusinessUnitTable: unattachedBusinessUnitTable,
            attachedBusinessUnitTable: attachedBusinessUnitTable,
            companyUserTabsViewTransfer: companyUserTabsViewTransfer,
            attachedCompanyUsersTabsViewTransfer: attachedCompanyUsersTabsViewTransfer,
            urlDownloadCompanyUserExample: urlDownloadCompanyUserExample,
            unattachedCompanyUserTable: unattachedCompanyUserTable,
            attachedCompanyUserTable: attachedCompanyUserTable,
            companyTabsViewTransfer: companyTabsViewTransfer,
            attachedCompaniesTabsViewTransfer: attachedCompaniesTabsViewTransfer,
            urlDownloadCompanyExample: urlDownloadCompanyExample,
            unattachedCompanyTable: unattachedCompanyTable,
            attachedCompanyTable: attachedCompanyTable,
            modelAttachmentTabsViewTransfer: modelAttachmentTabsViewTransfer,
            attachedModelsTabsViewTransfer: attachedModelsTabsViewTransfer,
            urlDownloadModelExample: urlDownloadModelExample,
            unattachedSspModelTable: unattachedSspModelTable,
            attachedSspModelTable: attachedSspModelTable
        },
        inputSelector: '#fileAttachment_attachmentScope',
        confirmTitle: 'Change attachment type?',
    } %}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-self-service-portal.js') }}"></script>
{% endblock %}
